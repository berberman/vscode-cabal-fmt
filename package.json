{
	"name": "vscode-cabal-fmt",
	"displayName": "cabal-fmt",
	"description": "Format .cabal using cabal-fmt",
	"homepage": "https://github.com/berberman/vscode-cabal-fmt",
	"repository": {
		"type": "git",
		"url": "https://github.com/berberman/vscode-cabal-fmt"
	},
	"bugs": {
		"url": "https://github.com/berberman/vscode-cabal-fmt/issues"
	},
	"license": "MIT",
	"keywords": [
		"haskell",
		"cabal",
		"format"
	],
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:cabal"
	],
	"main": "./out/extension.js",
	"publisher": "berberman",
	"icon": "img/cabal.png",
	"contributes": {
		"configuration": {
			"title": "vscode-cabal-fmt configuration",
			"properties": {
				"cabal-fmt.binaryPath": {
					"type": "string",
					"default": "",
					"description": "Path to cabal-fmt executable\nYou can use ${HOME}, ${home}, or ~/ to represent user's home directory.\nIf not set, the extension will find cabal-fmt in PATH."
				},
				"cabal-fmt.indent": {
					"type": "integer",
					"default": 2,
					"description": "Indentation"
				},
				"cabal-fmt.autoFormat": {
					"type": "boolean",
					"default": true,
					"description": "Auto format `.cabal` files whenever a new `.hs` file is created, so `cabal-fmt: expand` fields are always up to date"
				},
				"cabal-fmt.notify": {
					"type": "boolean",
					"default": true,
					"description": "Show notification message whenever formatting is triggered"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/command-exists": "^1.2.0",
		"@types/node": "^12.20.12",
		"@types/tmp": "^0.2.0",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.25.0",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"command-exists": "^1.2.9",
		"tmp": "^0.2.1"
	}
}
